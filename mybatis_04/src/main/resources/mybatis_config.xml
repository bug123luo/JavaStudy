<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<properties resource="jdbc.properties"/>
	<typeAliases>
		<typeAlias alias="role" type="com.lcclovehww.pojo.Role"/>
	</typeAliases>
	
	<typeHandlers>
		<typeHandler handler="org.apache.ibatis.type.EnumOrdinalTypeHandler" javaType="com.lcclovehww.enums.Sex"/>
	</typeHandlers>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC">
				<property name="autoCommit" value="false"/>
			</transactionManager>
			<dataSource type="POOLED">
				<property name="driver" value="${driver}"/>
				<property name="url" value="${url}"/>
				<property name="username" value="${username}"/>
				<property name="password" value="${password}"/>
			</dataSource>
		</environment>
	</environments>
	
	<mappers>
		<mapper resource="com/lcclovehww/mapper/Role.xml"/>
		<mapper resource="com/lcclovehww/mapper/StudentMapper.xml"/>
		<mapper resource="com/lcclovehww/mapper/StudentSelfcardMapper.xml"/>
		<mapper resource="com/lcclovehww/mapper/StudentLectureMapper.xml"/>
		<mapper resource="com/lcclovehww/mapper/LectureMapper.xml"/>
	</mappers>
</configuration>