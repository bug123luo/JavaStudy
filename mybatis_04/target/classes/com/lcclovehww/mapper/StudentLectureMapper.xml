<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lcclovehww.mapper.StudentLectureMapper">
	<resultMap type="com.lcclovehww.pojo.StudentLecture" id="studentLectureMap">
		<id property="id" column="id"/>
		<result property="stuId" column="stu_id"/>
		<result property="lectureId" column="lecture_id"/>
		<result property="grade" column="grade"/>
		<result property="remark" column="remark"/>
		<association property="lecture" column="lecture_id" select="com.lcclovehww.mapper.LectureMapper.getLecture"/>
	</resultMap>
	<select id="findStudentLectureByStuId" parameterType="long" resultMap="studentLectureMap">
		select id,stu_id,lecture_id,grade,remark from student_lecture where stu_id=#{id}
	</select>
</mapper>